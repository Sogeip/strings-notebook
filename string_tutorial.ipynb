   "source": [
    "# How to determine if a string (sequence of letters/numbers/symbols) contains a sub-string:\n",
    "\n",
    "# Evaluates to true:\n",
    "coolasf = 'isaiah' in 'that guy isaiah is cool as fuck'\n",
    "\n",
    "# Evaluates to false:\n",
    "kju = 'isaiah' in \"that guy Kim Jong Un isn't very nice\"\n",
    "\n",
    "print(coolasf)\n",
    "print(kju)"
   ]
  },
  {
   "cell_type": "code",
